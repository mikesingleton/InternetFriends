{
    "name": "__MSG_appName__",
    "version": "1.1.4",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "html/background.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "exclude_matches": [
            "*://*.internetfriends.social/*",
            "*://internetfriends.social/*",
            "*://internetfriends-website.web.app/",
            "*://internetfriends-website.firebaseapp.com/"
        ],
        "css": ["styles/inject.css"],
        "js": [
            "libs/iro/iro.js",
            "libs/jquery-3.5.1.min.js",
            "scripts/logger.js",
            "scripts/settings.js",
            "scripts/inject.js"
        ],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "scripts/logger.js",
        "scripts/settings.js",
        "scripts/background.js",
        "scripts/popup.js",
        "html/iframe/chat.html",
        "html/background.html",
        "scripts/bundle.js",
        "styles/core.css",
        "styles/chat.css",
        "styles/slider.css",
        "styles/popup.css"
    ],
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "19": "images/icon-19.png",
            "38": "images/icon-38.png"
        },
        "default_title": "InternetFriends"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "internetfriends@internetfriends.social"
        }
    }      
}